<odoo>
  <record id="view_liber_quote_tree" model="ir.ui.view">
    <field name="name">liber.quote.tree</field>
    <field name="model">liber.quote</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="origin_postal_code"/>
        <field name="destiny_postal_code"/>
        <field name="package_weight"/>
        <field name="state"/>
        <field name="selected_rate_id"/>
      </tree>
    </field>
  </record>

  <record id="view_liber_quote_form" model="ir.ui.view">
    <field name="name">liber.quote.form</field>
    <field name="model">liber.quote</field>
    <field name="arch" type="xml">
      <form string="Cotización Liber">
        <header>
          <button name="action_get_rates" type="object" string="Obtener cotizaciones"
                  class="btn-primary" states="draft,rated"/>
          <button name="action_create_guide" type="object" string="Crear guía"
                  attrs="{'invisible': [('selected_rate_id','=',False)]}" states="rated"/>
          <field name="state" widget="statusbar"/>
        </header>
        <sheet>
          <group>
            <group string="Paquete">
              <field name="package_content"/>
              <field name="package_content_price"/>
              <field name="package_height"/>
              <field name="package_width"/>
              <field name="package_depth"/>
              <field name="package_weight"/>
            </group>
            <group string="Origen/Destino">
              <field name="origin_postal_code"/>
              <field name="origin_city_name"/>
              <field name="destiny_postal_code"/>
              <field name="destiny_city_name"/>
            </group>
          </group>

          <notebook>
            <page string="Remitente">
              <group>
                <field name="sender_full_name"/><field name="sender_phone"/>
                <field name="sender_state"/><field name="sender_city"/>
                <field name="sender_colony"/><field name="sender_street"/>
                <field name="sender_ext_number"/><field name="sender_int_number"/>
                <field name="sender_refs"/>
              </group>
            </page>
            <page string="Destinatario">
              <group>
                <field name="recipient_full_name"/><field name="recipient_phone"/>
                <field name="recipient_state"/><field name="recipient_city"/>
                <field name="recipient_colony"/><field name="recipient_street"/>
                <field name="recipient_ext_number"/><field name="recipient_int_number"/>
                <field name="recipient_refs"/>
              </group>
            </page>
            <page string="Cotizaciones">
              <field name="selected_rate_id" readonly="1"/>
              <field name="rate_ids" context="{'default_quote_id': active_id}">
                <tree editable="bottom">
                  <field name="provider"/>
                  <field name="service_name"/>
                  <field name="shipping_code"/>
                  <field name="product_code"/>
                  <field name="local_product_code"/>
                  <field name="price"/>
                  <button name="action_select" type="object" string="Elegir" class="btn-primary"/>
                </tree>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
