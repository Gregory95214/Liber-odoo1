<odoo>
  <record id="res_config_settings_view_form_liber" model="ir.ui.view">
    <field name="name">res.config.settings.liber.form</field>
    <field name="model">res.config.settings</field>
    <!-- Odoo 17: vista base correcta -->
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <!-- Insertamos nuestro bloque dentro del <sheet> del formulario -->
      <xpath expr="//sheet" position="inside">
        <div class="app_settings_block" string="Liber Shipping">
          <h2>Liber Shipping</h2>
          <div class="row mt16 o_settings_container">
            <div class="col-12 col-lg-6">
              <div class="o_setting_box">
                <div class="o_setting_left_pane">
                  <field name="liber_api_base"/>
                  <field name="liber_api_key_rates" password="True"/>
                  <field name="liber_api_key_t1"    password="True"/>
                  <field name="liber_api_key_t2"    password="True"/>
                  <field name="liber_api_key_liber" password="True"/>
                </div>
                <div class="o_setting_right_pane">
                  <label for="liber_api_base"/>
                  <div class="text-muted">
                    URL base y claves API de Liber para cotizar y crear gu√≠as (por proveedor).
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>
</odoo>
